apiVersion: v1
kind: Service
metadata:
  name: blockchain-explorer-db
  labels:
    run: explorer-db
spec:
  type: ClusterIP 
  selector:
    name: explorer-db
  ports:
  - protocol: TCP
    port: 5432
    targetPort: 5432 
    name: pgsql
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: blockchain-explorer-db
spec:
  replicas: 1
  template:
    metadata:
      labels:
        name: explorer-db
    spec:
      volumes:
      - name: fabricfiles
        persistentVolumeClaim:
          claimName: fabric-pvc
      containers:
      - name: postgres
        image: postgres:10.4-alpine
        env:
        - name: TZ
          value: "<%= @TZ %>"
        - name: DATABASE_DATABASE
          value: <%= @database_database %>
        - name: DATABASE_USERNAME
          value: <%= @database_username %>
        - name: DATABASE_PASSWORD
          value:  <%= @database_password %>
        volumeMounts:
        - mountPath: /fabric
          name: fabricfiles
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: blockchain-explorer-app
spec:
  replicas: 1
  template:
    metadata:
      labels:
        name: explorer
    spec:
      volumes:
      - name: fabricfiles
        persistentVolumeClaim:
          claimName: fabric-pvc
      containers:
      - name: explorer
        image: hyperledger/explorer:latest
        command: ["sh" , "-c" , "/fabric/config/explorer/app/run.sh"]
        env:
        - name: TZ
          value: "<%= @TZ %>"
        - name: DATABASE_HOST
          value: <%= @database_host %>
        - name: DATABASE_USERNAME
          value: <%= @database_username %>
        - name: DATABASE_PASSWORD
          value: <%= @database_password %>
        volumeMounts:
        - mountPath: /fabric
          name: fabricfiles

